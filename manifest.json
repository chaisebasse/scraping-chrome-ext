{
  "manifest_version": 3,
  "name": "Data extraction",
  "version": "1.0",
  "description": "Extract data from LinkedIn and internal tables",

  "action": {
    "default_title": "Run table scraper",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/nibelis-16.png",
      "32": "images/nibelis-32.png",
      "48": "images/nibelis-48.png",
      "128": "images/nibelis-128.png"
    }
  },

  "icons": {
    "16": "images/nibelis-16.png",
    "32": "images/nibelis-32.png",
    "48": "images/nibelis-48.png",
    "128": "images/nibelis-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/talent/hire/*/manage/all/profile/*"
      ],
      "js": ["scripts/Linkedin/content.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },

  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "downloads",
    "activeTab"
  ],

  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://s-tom-1:90/MeilleurPilotage/servlet/ListeEtats?TEMPLATE=RECR_ListeRecherche*",
    "file:///*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "scripts/common/HighlightHelper.js",
        "scripts/common/ScrollHelper.js",
        "scripts/common/Parameter.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
