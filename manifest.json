{
  "manifest_version": 3,
  "name": "Data extraction",
  "version": "1.0",
  "description": "Extract data from LinkedIn and internal tables",

  "action": {
    "default_title": "Run table scraper",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/nibelis-16.png",
      "32": "images/nibelis-32.png",
      "48": "images/nibelis-48.png",
      "128": "images/nibelis-128.png"
    }
  },

  "icons": {
    "16": "images/nibelis-16.png",
    "32": "images/nibelis-32.png",
    "48": "images/nibelis-48.png",
    "128": "images/nibelis-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "http://s-tom-1:90/MeilleurPilotage/*"
      ],
      "js": ["scripts/Insert/content.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    },
    {
      "matches": [
        "http://s-tom-1:90/MeilleurPilotage/servlet/Gestion*",
        "http://s-tom-1:90/MeilleurPilotage/servlet/UG*"
      ],
      "js": ["scripts/Insert/postSubmitRedirect.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://s-tom-1:90/MeilleurPilotage/*"
      ],
      "js": ["scripts/Insert/contentBridge.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },

  "permissions": [
    "storage",
    "scripting",
    "tabs",
    "downloads",
    "activeTab",
    "webRequest"
  ],

  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://s-tom-1:90/MeilleurPilotage/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "scripts/common/HighlightHelper.js",
        "scripts/common/ScrollHelper.js",
        "scripts/common/Parameter.js",
        "scripts/MP/jobScraper.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
